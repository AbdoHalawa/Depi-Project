@model Course_Lectures
<div class="">
    <div class="row">
        <!-- Left Column: List of Videos, Documents, and Exams -->
        <div class="col-4 p-3 bg-primary shadow rounded sticky-top" style="top: 10px;">
            <h5 class="mb-4 text-center text-dark border-bottom pb-2">Videos</h5>
            @foreach (var video in Model.Videos)
            {
                <div class="card mb-3 border-0 shadow-sm">
                    <div class="card-body d-flex justify-content-between align-items-center">
                        <span class="fw-bold">@video.Title</span>
                        <button class="btn btn-sm btn-outline-primary view-content"
                                data-url="/Video/GetVideoById/@video.Id">
                            View
                        </button>
                    </div>
                </div>
            }

            <h5 class="mb-4 mt-5 text-center text-dark border-bottom pb-2">Documents</h5>
            @foreach (var document in Model.Documents)
            {
                <div class="card mb-3 border-0 shadow-sm">
                    <div class="card-body d-flex justify-content-between align-items-center">
                        <span class="fw-bold">@document.Title</span>
                        <button class="btn btn-sm btn-outline-primary view-content"
                                data-url="/Document/GetDocumentById/@document.Id">
                            View
                        </button>
                    </div>
                </div>
            }

            <h5 class="mb-4 mt-5 text-center text-dark border-bottom pb-2">Exams</h5>
            @foreach (var exam in Model.Exams)
            {
                <div class="card mb-3 border-0 shadow-sm">
                    <div class="card-body d-flex justify-content-between align-items-center">
                        <span class="fw-bold">@exam.Name</span>
                        <button class="btn btn-sm btn-outline-primary view-content"
                                data-url="/Exam/GetExamById/@exam.Id">
                            View
                        </button>
                    </div>
                </div>
            }
        </div>

        <!-- Right Column: Display Content -->
        <div class="col-7 mt-2 overflow-auto" style="height: 80vh;">
            <div id="content-display" class="p-4 border rounded bg-light shadow-sm">
                <h5 class="text-center text-muted">Select an item to view its content</h5>
            </div>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function () {
        // Handle button clicks for viewing content
        $('.view-content').click(function (e) {
            e.preventDefault(); // Prevent default behavior

            var url = $(this).data('url'); // Get the URL from the button's data-url attribute

            // Show a loading spinner in the content display area
            $('#content-display').html(`
                    <div class="text-center mt-3">
                        <div class="spinner-border" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                    </div>
                `);

            // Load the content into the display area
            $.get(url, function (data) {
                $('#content-display').html(data); // Replace the content with the response
            }).fail(function () {
                $('#content-display').html('<p class="text-danger">Error loading content. Please try again.</p>');
            });
        });
    });
</script>



